{
  "version": 2,
  "builds": [
    { "src": "api/*.py", "use": "@vercel/python" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/live", "dest": "/api/live.py" },
    { "src": "/api/chat", "dest": "/api/chat.py" },
    { "src": "/api/chat/(.*)", "dest": "/api/chat.py?action=$1" },
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
